@using Microsoft.AspNetCore.Identity
@using QuizApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizApp</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard"></i> Online Quiz (Section - A)
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Student" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-journal-text"></i> Student Panel
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <span class="navbar-text">
                                    <i class="bi bi-person-circle text-success"></i>
                                    Hello, <strong>@UserManager.GetUserName(User)</strong>!
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post"
                                      asp-route-returnUrl="@Url.Action("Index", "Home")"
                                      id="logoutForm" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-danger">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- Student Dashboard Special Styling -->
            @if (ViewData["Title"]?.ToString() == "Student Dashboard")
            {
                <h2 class="mb-4"><i class="bi bi-journal-text text-primary"></i> Available Quizzes</h2>
                <div class="row">
                    @if (Model is IEnumerable<QuizApp.Models.Quiz> quizzes)
                    {
                        foreach (var quiz in quizzes)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm h-100">
                                    <div class="card-body">
                                        <h5 class="card-title text-primary fw-bold">@quiz.Title</h5>
                                        <p class="card-text text-muted">@quiz.Description</p>
                                        <p class="fw-bold">Total Questions: @quiz.Questions?.Count()</p>
                                        <a asp-area="Student" asp-controller="Dashboard" asp-action="TakeQuiz" asp-route-id="@quiz.Id"
                                           class="btn btn-success btn-sm">
                                            <i class="bi bi-pencil-square"></i> Take Quiz
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No quizzes available.</p>
                    }
                </div>
            }
            else
            {
                @RenderBody()
            }
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4 py-3">
        <div class="container text-center">
            &copy; @(DateTime.Now.Year) - <strong>QuizApp</strong>
        </div>
    </footer>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
