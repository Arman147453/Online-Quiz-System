@model QuizApp.ViewModels.QuizResultViewModel

@{
    ViewData["Title"] = "Quiz Result";
}

<h2>Quiz Result - @Model.QuizTitle</h2>
<hr />

<p><strong>Score:</strong> @Model.Score / @Model.TotalQuestions (@Model.ScorePercent.ToString("F2")%)</p>

<table class="table table-bordered mt-3">
    <thead class="table-light">
        <tr>
            <th>Question</th>
            <th>Your Answer</th>
            <th>Correct Answer</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ans in Model.Answers)
        {
            <tr>
                <td>@ans.QuestionText</td>
                <td>@ans.YourAnswer</td>
                <td>@ans.CorrectAnswer</td>
                <td>
                    @if (ans.IsCorrect)
                    {
                        <span class="text-success">Correct</span>
                    }
                    else
                    {
                        <span class="text-danger">Wrong</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
