@model IEnumerable<QuizApp.Models.Quiz>

@{
    ViewData["Title"] = "Available Quizzes";
}

<h2 class="mb-4">Available Quizzes</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No quizzes available right now. Please check back later.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Total Questions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quiz in Model)
            {
                <tr>
                    <td>@quiz.Title</td>
                    <td>
                        @(
                                        quiz.Questions != null
                                        ? quiz.Questions.Count
                                        : 0
                                        )
                </td>
                <td>
                    <a asp-action="Take" asp-route-id="@quiz.Id" class="btn btn-primary btn-sm">Take Quiz</a>
                </td>
            </tr>
                }
        </tbody>
    </table>
}
