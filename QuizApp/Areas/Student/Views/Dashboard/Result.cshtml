@model QuizApp.ViewModels.QuizResultViewModel

@{
    ViewData["Title"] = "Quiz Result";
}

<h2>Quiz Result</h2>
<hr />

<div class="alert alert-info">
    <strong>Quiz:</strong> @Model.QuizTitle <br />
    <strong>Score:</strong> @Model.Score / @Model.TotalQuestions <br />
    <strong>Percentage:</strong> @Model.ScorePercent.ToString("F2")%
</div>

<h4>Answers</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Question</th>
            <th>Your Answer</th>
            <th>Correct Answer</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ans in Model.Answers)
        {
            <tr>
                <td>@ans.QuestionText</td>
                <td>@ans.YourAnswer ?? "<i>No Answer</i>"</td>
                <td>@ans.CorrectAnswer</td>
                <td>
                    @if (ans.IsCorrect)
                    {
                        <span class="badge bg-success">Correct</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Wrong</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
