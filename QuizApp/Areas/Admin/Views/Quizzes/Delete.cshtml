@model QuizApp.Models.Quiz
@{
    ViewData["Title"] = "Delete Quiz";
}

<h1>Delete Quiz</h1>
<hr />
<form asp-area="Admin" asp-controller="Quizzes" asp-action="Delete" method="post">
    @* Hidden id so POST knows which to delete *@
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <p><strong>Are you sure you want to delete this quiz?</strong></p>
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Active</dt>
            <dd class="col-sm-10">@Model.IsActive</dd>
        </dl>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-area="Admin" asp-controller="Quizzes" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
