@model QuizApp.Models.Option

@{
    ViewData["Title"] = "Edit Option";
}

<h2>Edit Option</h2>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="QuestionId" />

    <div class="mb-3">
        <label asp-for="Text" class="form-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsCorrect" class="form-check-input" />
        <label asp-for="IsCorrect" class="form-check-label">Correct Answer?</label>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Details" asp-controller="Questions" asp-route-id="@Model.QuestionId" class="btn btn-secondary">Cancel</a>
</form>
