@model QuizApp.Models.Question

@{
    ViewData["Title"] = "Question Details";
}

<div class="container mt-4">
    <h2>Question Details</h2>
    <hr />

    <h4>@Model.Text</h4>
    <p><strong>Quiz:</strong> @Model.Quiz?.Title</p>

    <h5 class="mt-3">Options</h5>
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Option Text</th>
                <th>Is Correct?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var opt in Model.Options)
            {
                <tr>
                    <td>@opt.Text</td>
                    <td>
                        @if (opt.IsCorrect)
                        {
                            <span class="badge bg-success">Correct</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Wrong</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-area="Admin" asp-controller="Quizzes" asp-action="Details" asp-route-id="@Model.QuizId" class="btn btn-primary">
            Back to Quiz
        </a>
        <a asp-area="Admin" asp-controller="Questions" asp-action="Create" asp-route-quizId="@Model.QuizId" class="btn btn-success">
            Add Another Question
        </a>
    </div>
</div>
